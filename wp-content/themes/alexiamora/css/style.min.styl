@import 'lib/nib'
@import url(normalizador.css)
/*Las variables*/
azul_google = #166BEC
blanco = rgb(235, 223, 240)
blanco_grisaseo = #dedded
gris = rgb(72,68,70)
gris_transparente = rgba(76, 76, 76, 0.5)
