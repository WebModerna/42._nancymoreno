			img
				width 100%

		h2
			a
				color blanco
				text-decoration none
				&:hover
				&:focus
				&:active
					text-decoration underline

		.contenido
			text-align left

		.google_maps
			color negro
			display block
			float none
			max-width 100%

		.img_full
			display block
			margin 1em auto
			float none

		.tags
			background negro_transparente
			display inline-block
			padding 0.5em 1em
			a
				color blanco_grisaseo
				text-decoration none
				&:hover
				&:focus
				&:active
					text-decoration underline

	.fondo_oscuro
		background negro_transparente

.posts_inline
	article
		display block
		margin 0.5em auto
		overflow hidden
		
		figure
			background blanco
			border 5px solid blanco
			border-radius(3px)
			box-shadow(5px 5px 5px #000)
			margin auto
			max-width 300px

			a
				transition(all 0.2s linear)
				&:hover
					opacity 0.5
			
			figcaption
				color negro
				font-family 'Allan'
				padding 0.5em 0
			
			img
				width 100%

.pagination
	color negro
	display block
	margin 1em 0.5em
	padding 0
	
	a
	li
		background blanco
		border-radius(2px)
		box-shadow(2px 2px 5px #000)
		display inline
		font-size 1.2em
		margin 0 1px
		padding 0.3em 0.5em
		text-decoration none
		text-shadow_lindo()

	a
		transition(all 0.4s ease)

		&:hover
		&:active
		&:focus
			background naranjarogizo
			color blanco

	.current
		background blanco
		color #999
		padding 0.3em 0.5em

.listado_comentarios
	text-align left
	a
		color azul_google
	
	ol
		padding 0
		li
			background negro_transparente
			list-style none
			padding 1em
			a
				color azul_google

.tags
	background negro_transparente
	display inline-block
	padding 0.5em 1em

.ver_mas
	background negro_transparente
	color blanco
	display inline-block
	padding 0.5em 1em
	text-decoration none
	transition(all 0.3s ease-in-out)
	&:hover
	&:focus
		background naranjarogizo
		text-decoration none


