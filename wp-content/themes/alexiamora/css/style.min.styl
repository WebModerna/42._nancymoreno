/*Los Prerender*/
@font-face
	font-family 'icomoon'
	src: url('data:application/x-font-ttf;charset=utf-8;base64,') format('truetype'), url('data:application/font-woff;charset=utf-8;base64,') format('woff');
	font-weight normal
	font-style normal

@font-face
	font-family 'Share Tech'
	src url('fonts/sharetech.eot')
	src url('fonts/sharetech.eot') format('embedded-opentype'),
	url('fonts/sharetech.woff') format('woff'),
	url('fonts/sharetech.ttf') format('truetype'),
	url('fonts/sharetech.svg#ShareTechRegular') format('svg')


@font-face
	font-family 'Allan'
	src url('fonts/allan.eot')
	src url('fonts/allan.eot') format('embedded-opentype'),
	url('fonts/allan.woff') format('woff'),
	url('fonts/allan.ttf') format('truetype'),
	url('fonts/allan.svg#AllanRegular') format('svg')

/*Las etiquetas*/
body
	background blanco
	color blanco
	font-family 'Share Tech'
	font-size 17px
	text-align center
/*los mensajes del Contact Form 7*/
div
	.wpcf7
		margin 0
		padding 0
		div
			.ajax-error
				display none
		img
			.ajax-loader
				border 0
				margin-left 4px
				vertical-align middle
		.placeheld
			color #888
	.wpcf7-mail-sent-ok
		border 2px solid #398f14
	.wpcf7-mail-sent-ng
		border 2px solid #f00
	.wpcf7-response-output
		margin 2em 0.5em 1em
		padding 0.2em 1em
	.wpcf7-spam-blocked
		border 2px solid #ffa500
	.wpcf7-validation-errors
		border 2px solid #f7e700
	
span
	.use-floating-validation-tip
		span
			.wpcf7-not-valid-tip
				background #fff 
				border 1px solid #f00 
				left auto
				padding 0.2em 0.8em
				position absolute
				right 20%
				top 20% left 20%
				z-index 100 

	.wpcf7-display-none 
		display none 
	.wpcf7-form-control-wrap
		position relative
	.wpcf7-list-item
		margin-left 0.5em
		margin-left 0 
		margin-right 0.5em 
	.wpcf7-not-valid-tip
		color #e33 
		direction rtl
		display block
		font-size 1em
/*Fin del contact Form 7*/
form
	background negro_transparente
	margin 0 auto
	max-width 400px
	padding 1em

	input
	textarea
		background negro_transparente
		border none
		box-sizing()
		color blanco
		font-family 'Share Tech'
		font-size 1.2em
		display block
		margin 1em auto
		padding 0.5em
		width 95%
		transition(all 0.3s ease-in)
		&:focus
			border 2px solid naranjarogizo
			box-shadow(0px 0px 5px 2px naranjarogizo)

	input[type="submit"]
		display inline-block
		margin 0
		padding 0.5em 1em
		width auto
		&:hover
			background naranjarogizo

	.captcha
		display inline-block
		width 100px
		vertical-align baseline

footer
	background naranjatransparente
	color blanco
	font-family 'Allan'
	padding 1em

	a
		color #ddd
		text-decoration none
		&:hover
		&:focus
			text-decoration underline
	address
		font-style normal

	ul
		margin: 1.2em auto;
		padding: 0.2em 0 0 0;

		li
			display inline-block
			
			a
				color blanco
				display block
				font-family 'icomoon'
				font-size 1.5em
				padding 0 0.3em
				text-decoration none
				text-shadow_lindo()

				&:focus
				&:hover
					color #bbb
					text-decoration none

	.ir_arriba
		background naranjatransparente
		border-radius(0.1em)
		bottom 0.1em
		color blanco
		display inline-block
		font-family monospace
		font-size 1.5em
		padding 0.3em 0.5em 0 0.5em
		position fixed !important
		right 0.1em
		text-decoration none
		transition(all 0.2s ease-in)
		&:hover
			background naranjarogizo

h1, h2, h3, h4, h5, h6
	font-family 'Allan'

header
	box-shadow(0px 1px 2px blanco)
	border-bottom 1px solid negro
	padding-bottom 1em
	overflow hidden

	a
		display inline-block
		
		figure
			margin 0 auto
			width 100px
			
			img
				width 100%

			.logo_color
				&:first-child
					display none

		
		.foto_alexia
			margin-bottom 0.2em			
			
			img
				border 5px solid blanco
				border-radius(3px)
				box-shadow(2px 2px 5px #000)

		.posicionada
			transition(all 0.3s ease-in-out)
			
			&:hover
			&:focus
				transform rotateZ(18deg) rotateY(18deg)

	h1.left
		left 0.5em
		position absolute
		top 0.2em
		margin 0
	
				
	nav
		z-index 124
		ul
			height 0
			margin 0
			opacity 0
			padding 0
			transition(all 0.4s ease-in-out)
			visibility hidden
			
			li
				
				a
					background naranjarogizo
					color blanco
					display block
					font-family 'Allan'
					font-size 1.2em
					padding 0.5em 1em
					text-align left
					text-decoration none
					text-shadow_lindo()
					transition(all 0.4s ease-in-out)

				a:hover
					background moradito_amarronado
			
			.current-menu-item
			.current_page_item
				a
					background gris

			ul
				display none
				height auto
				opacity 1
				visibility visible

		.boton_menu
			background negro
			overflow hidden
			padding 0.2em 0.5em
			
			button
				background transparent
				border none
				color blanco
				float right
				font-family 'Allan'
				font-size 1.5em
				display block
				max-width 60px
				img
					width 100%

	.encabezado
			margin-top 2em
			h2
				color blanco
				font-family 'Allan'
				font-size 2em
				font-weight lighter
				margin 0
				text-shadow_lindo()	

section
	article
		padding 0.5em
		
			
